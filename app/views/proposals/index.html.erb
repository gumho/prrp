<h1>Listing proposals</h1>

<table>
  <tr>
    <th>Title</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @proposals.each do |proposal| %>
  <tr>
    <td><%= proposal.title %></td>
    <td><%= link_to 'Show', user_proposal_path(@user, proposal) %></td>
    <td><%= link_to 'Edit', edit_user_proposal_path(@user, proposal) %></td>
    <td><%= link_to 'Destroy', [@user, proposal], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

