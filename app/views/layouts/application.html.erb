<!DOCTYPE html>
<html>
<head>

    <title>Pacific Rim Research Program Proposal System</title>
    <%= stylesheet_link_tag :all %>
    
    <%= javascript_include_tag :defaults %>
    <%= yield :javascript_includes %>
    
    <%= csrf_meta_tag %>

</head>
<body>
    <div id="wrapper">
        <div id="header">
            <h1><a href="/">Pacific Rim Research Program</a></h1>
            <div id="nav-links">
                <% if current_user %>
                <%= link_to current_user.email, edit_user_path(current_user.id)%> |
                <%= link_to "Logout", :logout%>
                <% else %>
                <%= link_to "Register", new_user_path%> | 
                <%= link_to "Login", :login %>
                <% end %>
            </div>
        </div>

        <div id="notice">
            <%= flash_helper %>
        </div>

        <div id="content">
            <%= yield %>
        </div>
        
        <div id="footer">

        </div>
    </div>
</body>
</html>
